rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public branding assets - authenticated users can write (admin check in app)
    match /branding/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Public content images - authenticated users can write (admin check in app)
    match /content/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Bonanza images - authenticated users can write (admin check in app)
    match /bonanza/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User uploads (KYC, profile)
    match /users/{userId}/{allPaths=**} {
      allow read: if request.auth != null && 
                     (request.auth.uid == userId || 
                      request.auth.token.admin == true);
      allow write: if request.auth != null && 
                     request.auth.uid == userId;
    }
  }
}

